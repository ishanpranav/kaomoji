<h2>Dictionary</h2>
<form method="get" action="/dictionary" class="kaomoji-form-inline">
    <input
        name="emotion"
        type="text"
        class="kaomoji-form-inline-left kaomoji-full"
        placeholder="Search..."/>
    <input
        type="submit"
        class="kaomoji-button kaomoji-form-inline-right"
        value="Search"/>
</form>
<table>
    <tbody>
        {{#each kaomojis}}
        <tr>
            <td class="kaomoji-center kaomoji-no-wrap">
                <code class="kaomoji-code">{{value}}</code>
            </td>
            <td class="kaomoji-full">
                {{#each emotions}}
                {{this}}{{#unless @last}},{{/unless}}
                {{/each}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<form method="post" action="/dictionary" class="kaomoji-form-inline">
    <input 
        name="value"
        type="text"
        class="kaomoji-code kaomoji-form-inline-left"
        placeholder="Your kaomoji!"/>
    <input
        name="emotions"
        type="text"
        class="kaomoji-form-inline-left kaomoji-form-inline-right kaomoji-full"
        placeholder="Enter a list of comma-separated keywords..."/>
    <input
        type="submit"
        class="kaomoji-button kaomoji-form-inline-right"
        value="Add"/>
</form>
